<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#222222" >

    <RelativeLayout
        android:id="@+id/fileIfo_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <RelativeLayout
            android:id="@+id/fileIfo_name_layout"
            android:layout_width="fill_parent"
            android:layout_height="40dip" >

            <ImageView
                android:id="@+id/fileInfo_img"
                android:layout_width="40dip"
                android:layout_height="40dip" />

            <TextView
                android:id="@+id/fileInfo_name"
                android:layout_width="wrap_content"
                android:layout_height="40dip"
                android:layout_marginLeft="5dip"
                android:layout_toRightOf="@id/fileInfo_img"
                android:gravity="center_vertical"
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/fileInfo_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fileIfo_name_layout"
            android:layout_marginTop="10dip"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/fileInfo_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fileInfo_path"
            android:layout_marginTop="10dip"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/fileInfo_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fileInfo_date"
            android:layout_marginTop="10dip"
            android:textColor="#ffffff"
            android:textSize="16sp" />
        
        <TextView
            android:id="@+id/fileInfo_blockSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fileInfo_size"
            android:layout_marginTop="10dip"
            android:textColor="#ffffff"
            android:textSize="16sp" />
        
    </RelativeLayout>
</RelativeLayout>